{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@app/*": ["./src/*"],
      "@server/*": ["./src/server/*"],
      "@client/*": ["./src/client/*"],
      "@next/*": ["./src/next/*"],
      "@test/*": ["./src/__tests__/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
